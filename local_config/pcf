RewriteRule ^/staticcontent/(.*) http://cprxdev.pcf.com/staticcontent/$1 [L]
RewriteRule ^/cimg/(.*) http://crmimg.pcf.com/$1 [P]
RewriteRule ^/(.*) http://localsap:50000/b2c_sealy/link.do?link=$1&%{QUERY_STRING} [P]
</VirtualHost>

