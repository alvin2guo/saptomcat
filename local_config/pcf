NameVirtualHost 127.0.0.1

# b2b tomcat
<VirtualHost local-b2b:80>
ServerName local-b2b
DocumentRoot /var/www/
RewriteEngine On
RewriteLog "/var/log/apache2/sap.rewrite.log"
RewriteLogLevel 5
TimeOut 120
ProxyPassReverse / http://localhost:8080/
RewriteRule ^/staticcontent/(.*) http://bgprxdev.pcf.com/staticcontent/$1 [L]
RewriteRule ^/cimg/(.*) http://crmimagesdev.pcf.com/$1 [P]
RewriteRule ^(.*) http://localhost:8080/$1 [P]
</VirtualHost>

# b2b sap engine
<VirtualHost local-b2b-sap:80>
ServerName local-b2b-sap
DocumentRoot /var/www/
RewriteEngine On
RewriteLog "/var/log/apache2/sap.rewrite.log"
RewriteLogLevel 5
TimeOut 120
ProxyPassReverse / http://localsap:50000/
RewriteRule ^/staticcontent/(.*) http://bgprxdev.pcf.com/staticcontent/$1 [L]
RewriteRule ^/cimg/(.*) http://crmimagesdev.pcf.com/$1 [P]
RewriteRule ^(.*) http://localsap:50000/$1 [P]
</VirtualHost>

# sealy tomcat
<VirtualHost local-sealy:80>
ServerName local-sealy
DocumentRoot /var/www/
RewriteEngine On
RewriteLog "/var/log/apache2/sap.rewrite.log"
RewriteLogLevel 5
TimeOut 120
ProxyPassReverse / http://localhost:8080/
RewriteRule ^[/]?$ http://localhost:8080/b2c_sealy/link.do?link=ZHOMESTD [P]
RewriteRule ^/b2c_sealy/(.*) http://localhost:8080/b2c_sealy/$1 [P]
RewriteRule ^/staticcontent/(.*) http://cprxdev.pcf.com/staticcontent/$1 [L]
RewriteRule ^/cimg/(.*) http://crmimg.pcf.com/$1 [P]
RewriteRule ^/(.*) http://localhost:8080/b2c_sealy/link.do?link=$1&%{QUERY_STRING} [P]
</VirtualHost>

# sealy sap engine
<VirtualHost local-sealy-sap:80>
